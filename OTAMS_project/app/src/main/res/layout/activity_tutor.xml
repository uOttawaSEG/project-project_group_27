<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TutorActivity">

    <!-- Title -->
    <TextView
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/titletxt"
        android:layout_width="176dp"
        android:layout_height="41dp"
        android:text="Tutor Controls"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Row: Back, Availability, New -->
    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/studentBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="onBackClick"
        app:layout_constraintTop_toBottomOf="@id/titletxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Second Row: Past, Upcoming, Pending -->
    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/availabilityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:onClick="onAvailabilityClick"
        android:text="Availability"
        app:layout_constraintStart_toEndOf="@id/studentBackButton"
        app:layout_constraintTop_toTopOf="@id/studentBackButton" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/newButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:onClick="onNewClick"
        android:text="New"
        app:layout_constraintStart_toEndOf="@id/availabilityButton"
        app:layout_constraintTop_toTopOf="@id/studentBackButton" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/pastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past"
        android:onClick="onPastClick"
        app:layout_constraintTop_toBottomOf="@id/studentBackButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- ListView under the second row -->

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/upcomingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:onClick="onUpcomingClick"
        android:text="Upcoming"
        app:layout_constraintStart_toEndOf="@id/pastButton"
        app:layout_constraintTop_toTopOf="@id/pastButton" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/pendingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:onClick="onPendingClick"
        android:text="Pending"
        app:layout_constraintStart_toEndOf="@id/upcomingButton"
        app:layout_constraintTop_toTopOf="@id/pastButton" />

    <ListView
        android:id="@+id/accountListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pastButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
